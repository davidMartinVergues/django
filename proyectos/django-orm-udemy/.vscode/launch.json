    "version": "0.2.0",

    "configurations": [

        {

            "name": "Debug: Django Docker",

            "type": "debugpy",

            "request": "attach",

            "connect": {
                    "host": "0.0.0.0",
                    "port": 5678
                },
            "pathMappings": [
                    {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/app"
                    }
                ],
            "justMyCode": true,
            "django": true,
        },

        {

            "name": "Debug: Django Shell Docker",

            "type": "debugpy",

            "request": "attach",

            "connect": {
                "host": "0.0.0.0",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "django": true

        }

    ]

}